{{#unless this.deviceContext.isDesktop}}
  <div class="otb-mobile-tour-container">
    {{#if this.deviceOrientation.isPortrait}}
      <article class="uk-article">
        {{#if this.model.tourStop.stop.media}}
          <OtbMediaGallery @sortedMedia={{this.model.tourStop.stop.sortedMedia}} />
        {{/if}}
        <section class="uk-container uk-position-relative otb-mobile-tour-content">
          <h1 class="uk-article-title">{{this.model.tourStop.stop.title}}</h1>
          <ReadIt @lang={{this.model.tour.defaultLng}} @content={{this.model.tourStop.stop.sanitizedDescription}} />
          {{this.model.tourStop.stop.safeDescription}}
        </section>
        <MobileFooter />
      </article>
    {{else}}
      <div class="otb-mobile-stop-container uk-child-width-1-2 uk-position-relative" uk-grid>
        <div>
          {{#if this.model.tourStop.stop.media}}
            <OtbMediaGallery @sortedMedia={{this.model.tourStop.stop.sortedMedia}} />
          {{/if}}
        </div>
        <div class="uk-container uk-position-relative otb-mobile-tour-content">
          <article class="uk-article">
            <h1 class="uk-article-title">{{this.model.tourStop.stop.title}}</h1>
            <ReadIt @content={{this.model.tourStop.stop.sanitizedDescription}} @lang={{this.model.tour.defaultLang}} />
            {{this.model.tourStop.stop.safeDescription}}
          </article>
          <MobileFooter />
        </div>
      </div>
    {{/if}}
  </div>
{{/unless}}