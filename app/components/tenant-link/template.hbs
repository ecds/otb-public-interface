{{#if this.env.APP.TENANT}}
  <LinkTo @route={{@route}} @model={{@segment}}>
    {{yield}}
  </LinkTo>
{{else if this.tenant.isSubDomain}}
  <LinkTo @route={{@route}} @model={{@segment}}>
    {{yield}}
  </LinkTo>
{{else}}
  <a href={{concat "/" this.tenant.tenantPath "/" @segment}}>
    {{yield}}
  </a>
  {{!-- <LinkTo @route={{@route}} @models={{array @tenant @segment}}>
    {{yield}}
  </LinkTo> --}}
{{/if}}