<nav class="uk-navbar uk-light uk-background-secondary" uk-navbar>
  <div class="uk-navbar-left">
    <img class="uk-logo" src={{if this.tenant.tenantModel.logoUrl this.tenant.tenantModel.logoUrl "/assets/images/otblogo.png"}} alt="Branding">
    <ul class="uk-navbar-nav">
      <li>
        <h1 class="uk-text-large uk-margin-remove">{{this.tenant.tenantModel.name}}</h1>
      </li>
    </ul>
  </div>
</nav>
{{#if this.deviceContext.isDesktop}}
  <div class="uk-background-cover otb-tour-cell otb-common-loading uk-padding-large uk-panel uk-panel-scrollable">
    <div
      class={{concat (if (lt this.sortedTours.length 4) (concat "uk-flex-center uk-grid-row-large uk-child-width-1-" this.sortedTours.length "@l uk-child-width-1-1@m") "uk-grid-row-small uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l")}} uk-grid masonry="true">
      {{#each this.sortedTours as |tour|}}
        <TourLink @route="tour" @tenant={{tour.tenant}} @segment={{tour.slug}}>
          <div class="uk-transition-toggle">
            <div class="uk-card uk-card-small uk-card-default uk-transition-scale-up uk-transition-opaque">
              <div class="uk-card-media-top uk-text-center">
                <img src={{tour.splashUrl}} alt={{concat "Splash image for " tour.title}}>
              </div>
              <div class="uk-card-body">
                <h3 class="uk-comment-title">{{tour.title}}</h3>
                <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
                  <li>{{tour.stopCount}} Stops</li>
                  {{#if tour.estTime}}
                    <li>{{tour.estTime}}</li>
                  {{/if}}
                </ul>
              </div>
            </div>
          </div>
        </TourLink>
      {{/each}}
    </div>
  </div>
  <footer class="uk-child-width-1-1 uk-margin-auto" uk-grid>
    <p class="uk-position-center-left uk-text-left">
      <a href="//opentour.site">OpenTour.site</a> is developed and hosted by the <a href="https://digitalscholarship.emory.edu/" target="_blank" rel="noopener noreferrer">Emory Center for Digital Scholarship <FaIcon @icon="external-link-alt" @prefix="fas" /></a>, division of Emory University's Office of Information and Technology.
    </p>
    {{!-- <p class="uk-text-right uk-padding uk-position-center-right">
      <img src="https://it.emory.edu/_includes/images/system/lits_signature.png" />
    </p> --}}
  </footer>
{{else if this.deviceContext.isMobile}}
<div class="uk-child-width-1-1" uk-grid>
  {{#each this.sortedTours as |tour|}}
    <TourLink @route="tour" @tenant={{tour.tenant}} @segment={{tour.slug}}>
      <div class="uk-card uk-card-default uk-card-small {{if tour.show "uk-animation-slide-bottom"}}">
        <div class="uk-card-media-top uk-text-center">
          <img src={{tour.splashUrl}} alt={{concat "Splash image for " tour.title}}>
        </div>
        <div class="uk-card-body">
          <h3 class="uk-comment-title">{{tour.title}}</h3>
          <ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
            <li>{{tour.stopCount}} Stops</li>
            {{#if tour.estTime}}
              <li>{{tour.estTime}}</li>
            {{/if}}
          </ul>
        </div>
      </div>
    </TourLink>
  {{/each}}
</div>
{{else}}
  <section class="uk-background-cover otb-tour-cell otb-common-loading">
    <section class="uk-inline otb-tour-cell-overlay">
      <div class="uk-overlay uk-overlay-default uk-position-center">
        <h3 class="uk-heading">Loading Tours</h3>
      </div>
    </section>
  </section>
{{/if}}